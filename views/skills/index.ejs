<!DOCTYPE html>
<html>
  <head>
    <title>Express Skills</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
      <h1>Skills as of <%= time %></h1>
      <ul>
        <% skills.forEach((s, idx) => { %>
            <li>
              <form action="/skills/<%= idx %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">X</button>
              </form>
                <a href="/skills/<%= idx%>">
                  <%= s.skill %>
                </a>
                -
                <%= s.learned ? 'yes' : 'not quite' %>
            </li>
        <% }); %>
      </ul>
      <a href="/skills/new">Add skill</a>
  </body>
</html>
